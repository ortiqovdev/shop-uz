<div class="flex flex-col bg-slate-500 w-1/3 mx-auto mt-40 rounded-md">
   <h1 class="text-3xl mx-auto text-gray-50">
      Register
   </h1>
   <form action="/register" method="post" class="flex flex-col mx-auto items-start">
   <input type="text" placeholder="Name" name="name" class="w-96 h-10 p-2 m-2 rounded-lg">
   <input type="email" placeholder="Email" name="email" class="w-96 h-10 p-2 m-2 rounded-lg">
   <input type="password" placeholder="Password" name="password" class="w-96 h-10 p-2 m-2 rounded-lg">
   <button type="submit" class="p-2 bg-blue-500 w-20 m-2  rounded-lg text-white ">Register</button>
   </form>
</div>